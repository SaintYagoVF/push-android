<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="0dp">


        <TextView
            android:id="@+id/textViewConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/fondo"
            android:padding="10dp"
            android:text="Configuración"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textViewPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewConf"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"

            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Número de Notificaciones de Push Abiertos:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerPA"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPA"
            android:layout_centerHorizontal="true"
            android:prompt="@string/inicio_spinner"
            android:entries="@array/cantidad_configuracion"
            android:scrollbarSize="4dp" />

        <TextView
            android:id="@+id/textViewPG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerPA"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"

            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Número de Notificaciones de Push Guardados:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerPG"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPG"
            android:layout_centerHorizontal="true"
            android:prompt="@string/inicio_spinner"
            android:entries="@array/cantidad_configuracion"
            android:scrollbarSize="4dp" />
    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>