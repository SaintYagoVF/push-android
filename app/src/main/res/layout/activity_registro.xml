<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:padding="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Registro"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='¡Hola! Ingrese los campos solicitados y oprima el botón "Escanear" para registrarse en la plataforma.'
                android:textAlignment="center"
                android:textColor="@color/negro"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtUsuarioRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"

                android:drawableLeft="@drawable/ic_usuarios"
                android:drawablePadding="15dp"
                android:hint="Nombres y Apellidos"

                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textColorHint="@color/darkgray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"

                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="15dp"
                android:hint="Email"

                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textColorHint="@color/darkgray"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/btnFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUsuarioRegistro"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_fecha"

                android:drawablePadding="15dp"

                android:onClick="showDatePickerDialog"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="Fecha de Nacimiento"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textColorHint="@color/darkgray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"

                android:drawableLeft="@drawable/ic_clave"
                android:drawableRight="@drawable/ic_vision"
                android:drawablePadding="15dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textColorHint="@color/darkgray"
                android:textSize="18sp" />


            <Button
                android:id="@+id/btnRegistroObtenerEmpresas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSexo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:text="AÑADIR EMPRESAS"
                android:textColor="@color/darkgray"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnRegistroNuevaEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSexo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:text="ESCANEAR CÓDIGO QR"
                android:textColor="@color/darkgray"
                android:textSize="16dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>